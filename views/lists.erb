

<ul id="lists">
  <% sorted_lists_indexes.each do |index| %>
  <% list = @lists[index] %>
      <li class= <%=list_class(list) %>>
     <h2><a href="/lists/<%=index %>"><%= list[:name] %></a></h2>
    <p><%= remaining(list) %> /
      <%= list[:todos].size %></p></li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>

